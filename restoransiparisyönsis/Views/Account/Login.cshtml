@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4" style="border-radius: 20px;">
                <h2 class="text-center mb-4" style="font-family: 'Pacifico', cursive; color: #d90429;">Giriş Yap</h2>

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                    <div class="mb-3">
                        <label class="form-label">Email Adresi</label>
                        <input type="email" name="email" class="form-control rounded-pill" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input type="password" name="password" class="form-control rounded-pill" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 rounded-pill">Giriş Yap</button>
                </form>

                <div class="mt-3 text-center">
                    <p>Hesabın yok mu? <a asp-action="Register">Hemen Üye Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>