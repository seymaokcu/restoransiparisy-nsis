@{
    ViewData["Title"] = "Üye Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4" style="border-radius: 20px;">
                <h2 class="text-center mb-4" style="font-family: 'Pacifico', cursive; color: #d90429;">Aramıza Katıl</h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                    <div class="mb-3">
                        <label class="form-label">Email Adresi</label>
                        <input type="email" name="email" class="form-control rounded-pill" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input type="password" name="password" class="form-control rounded-pill" required />
                        <small class="text-muted" style="font-size: 0.7em;">En az 6 karakter, 1 büyük harf, 1 rakam içermeli.</small>
                    </div>
                    <button type="submit" class="btn btn-success w-100 rounded-pill">Üye Ol</button>
                </form>

                <div class="mt-3 text-center">
                    <p>Zaten üye misin? <a asp-action="Login">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
