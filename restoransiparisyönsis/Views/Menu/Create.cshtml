@model restoransiparisyönsis.Models.Menu
@{
    ViewData["Title"] = "Yeni Menü";
}

<div class="container mt-5">
    <h2>Yeni Menü Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="MenuAd" class="control-label"></label>
                    <input asp-for="MenuAd" class="form-control" placeholder="Örn: Big King Menü" />
                    <span asp-validation-for="MenuAd" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MenuFiyat" class="control-label"></label>
                    <input asp-for="MenuFiyat" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MenuFiyat" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Stok" class="control-label"></label>
                    <input asp-for="Stok" class="form-control" type="number" />
                    <span asp-validation-for="Stok" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResimYolu" class="control-label">Resim Dosya Adı</label>
                    <input asp-for="ResimYolu" class="form-control" placeholder="Örn: burger.jpg" />
                    <small class="text-muted">Resim dosyasını wwwroot/img klasörüne atmayı unutmayın.</small>
                </div>

                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>