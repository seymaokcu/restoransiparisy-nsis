@model IEnumerable<restoransiparisyönsis.Models.Siparis>
@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #3e2c2c;">📦 Sipariş Geçmişim</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success rounded-pill">Yeni Sipariş Ver</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center shadow-sm p-5 rounded-3">
            <h4>Henüz hiç siparişiniz yok.</h4>
            <p>Karnınız acıkmadı mı? Hemen lezzetli menülerimize göz atın!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm h-100 border-0" style="border-radius: 15px;">
                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                @if (item.Menu != null && !string.IsNullOrEmpty(item.Menu.ResimYolu))
                                {
                                    <img src="~/img/@item.Menu.ResimYolu" width="80" height="80" class="rounded-circle shadow-sm" style="object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 80px; height: 80px;">
                                        <i class="fa fa-hamburger"></i>
                                    </div>
                                }
                            </div>

                            <div class="flex-grow-1">
                                <h5 class="mb-1" style="font-family: 'Quicksand', sans-serif; font-weight: bold;">
                                    @(item.Menu?.MenuAd ?? "Bilinmeyen Menü")
                                </h5>
                                <p class="text-muted small mb-1">
                                    <i class="far fa-clock"></i> @item.SiparisTarihi.ToString("dd MMMM yyyy HH:mm")
                                </p>
                                <span class="badge bg-warning text-dark rounded-pill">@item.Adet Adet</span>
                            </div>

                            <div class="text-end">
                                <h4 class="text-success fw-bold mb-0">@item.ToplamTutar ₺</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>