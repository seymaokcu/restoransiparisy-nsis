@model IEnumerable<restoransiparisyönsis.Models.EkstraMalzeme>
@{
	ViewData["Title"] = "Ekstra Malzemeler";
}

<div class="container mt-5">
	<h2>Ekstra Malzemeler</h2>
	<p>
		<a asp-action="Create" class="btn btn-primary">Yeni Malzeme Ekle</a>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Malzeme Adı</th>
				<th>Fiyat</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.EkstraMalzemeAd</td>
					<td>@item.EkstraMalzemeFiyat</td>
					<td>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğnize emin misiniz?');">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
