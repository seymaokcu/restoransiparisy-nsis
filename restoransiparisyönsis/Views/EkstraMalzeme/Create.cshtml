@model restoransiparisyönsis.Models.EkstraMalzeme
@{
	ViewData["Title"] = "Yeni Malzeme";
}

<div class="container mt-5">
	<h2>Yeni Malzeme Ekle</h2>
	<div class="row">
		<div class="col-md-6">
			<form asp-action="Create">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group mb-3">
					<label asp-for="EkstraMalzemeAd" class="control-label"></label>
					<input asp-for="EkstraMalzemeAd" class="form-control" placeholder="Örn: Sarımsaklı Sos" />
				</div>

				<div class="form-group mb-3">
					<label asp-for="EkstraMalzemeFiyat" class="control-label" ></label>
					<input asp-for="EkstraMalzemeFiyat" class="form-control" type="number" step="0.5" />
				</div>

				<div class="form-group">
					<input type="submit" value="Ekle" class="brn brn-success" />
					<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
				</div>
			</form>
		</div>
	</div>
</div>
